<%= link_to("<<Back to List", {:action => 'index'}, :class => 'balck-link') %>


<h1 class="payment_name">New Payment</h1>

<%= form_for(:payment, :url => { :action => 'create'}) do |f| %>

	<table summary="Payment form field">
		<tr>
			<th>Purpose of Payment</th>
			<th><%= f.text_field(:payment_name) %></td>
		</tr>

		<tr>
			<th>Payment amount</th>
			<th><%= f.number_field(:payment_amount) %></td>
		</tr>
		<tr>
			<th>Additions</th>
			<th><%= f.text_field(:description) %></td>
		<tr>
	</table>

	<div class="actions">
      <%= f.submit "Accept" %>
  	</div>

	<div class="links">
	  <%= link_to 'Back', loans_path %>
	</div>

<% end %>


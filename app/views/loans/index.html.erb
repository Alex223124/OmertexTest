<% if @loans.any? %>
<div class="bigbox">
  <div class="box">
    <table class="table-minimal">
      <h1> List of All Loans </h1>
      <tbody>
        <% @loans.each do |loan| %>
          <tr>
            <%= render loan %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% else %>

<p>No loans have been taken.</p>

<%= link_to "Take a Sweet New Loan!", :controller => "loans", :action => "new", :id => @loans %>

<% end %> 
<%= link_to("<<Back to List", {:action => 'index'}, :class => 'balck-link') %>


<h1 class="loan_name">New Loan</h1>
<h2> Loan is ... quote </h2>

<%= form_for(:loan, :url => { :action => 'create'}) do |f| %>

	<table summary="Loan form field">

		<tr>
			<th>Loan amount</th>
			<th><%= f.number_field(:loan_amount) %></td>
		</tr>

		<tr>
			<th>Period</th>
			<th><%= f.number_field(:period) %></td>
		</tr>

		<tr>
			<th>Additions</th>
			<th><%= f.text_field(:description) %></td>
		<tr>
	</table>

	<div class="actions">
      <%= f.submit "Create new Loan" %>
  	</div>

	<div class="links">
	  <%= link_to 'Back', loans_path %>
	</div>

<% end %>


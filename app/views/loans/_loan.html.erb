<div class="row">
  <div class="well col-md-8 col-md-offset-2"> 

    <div class="field">
    <%= link_to loan.loan_name, loan %><br>
    Loan id: <%= loan.id %><br>
    Loan status: <%= loan.status %><br>

    <% if @current_user.admin? %>
      <div class="links">
        <%= link_to("Edit Loan", {:action => 'edit', :id => loan.id}, :class => 'action edit') %>
      </div>
    <% end %>
    <div class="links">
      <%= link_to("Show Loan", {:action => 'show', :id => loan.id}, :class => 'action show') %>
    </div>
  </div>

  </div>
</div>